<h1>Add a new exhibit</h1>

<form method="POST" action="/exhibitions">
  <div class="form-wrapper">

    <div class="field">
      <label for="title">Title:</label>
      <input type="text" name="title" id="title"/>
    </div>

    <div class="field">
      <label for="subtitle">Subtitle:</label>
      <input type="text" name="subtitle" id="subtitle"/>
    </div>

    <div class="field">
      <label for="opening">Opening date:</label>
      <input type="date" id="opening" name="opening"
       value="<%= @date %>"
       min="01-01-2019" max="31-12-2025"/>
    </div>

    <div class="field">
      <label for="closing">Closing date:</label>
      <input type="date" name="closing" id="closing"
      value="<%= @date %>"
      min="01-01-2019" max="31-12-2025"/>
    </div>

    <div class="big-field">
      <label for="description">Description:</label>
      <input type="text" name="description" id="description"/>
    </div>

    <div class="drop-down">
      <label for="select-artist">Artist:</label>
      <select name="artist_id" id="select-artist">
        <% @artists.each do |artist| %>
          <option value=<%= artist.id %>><%= artist.name %></option>
        <% end %>
      </select>
    </div>

    <div class="drop-down">
      <label for="category">Category:</label>
      <select name="category" id="category">
        <option value="sculpture">sculpture</option>
        <option value="performance">performance</option>
        <option value="sound installation">sound installation</option>
        <option value="painting">painting</option>
        <option value="ceramics">ceramics</option>
        <option value="moving image">moving image</option>
        <option value="printmaking">printmaking</option>
      </select>
    </div>

    <div class="field">
      <label for="image">Image URL:</label>
      <input type="text" name="image" id="image"/>
    </div>

    <div class="button">
      <input type="submit" value="Add Exhibit"/>
    </div>

  </form>
