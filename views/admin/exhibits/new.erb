<h1>Add a new exhibit</h1>

<form method="POST" action="/exhibitions">
  <div class="form-wrapper">

    <div class="field">
      <label for="title">Title:</label>
      <input type="text" name="title" id="title"/>
    </div>

    <div class="field">
      <label for="subtitle">Subtitle:</label>
      <input type="text" name="subtitle" id="subtitle"/>
    </div>

    <div class="field">
      <label for="opening">Opening date:</label>
      <input type="date" id="opening" name="opening"
      value="<%= @date %>"
      min="01-01-2019" max="31-12-2025"/>
    </div>

    <div class="field">
      <label for="closing">Closing date:</label>
      <input type="date" name="closing" id="closing"
      value="<%= @date %>"
      min="01-01-2019" max="31-12-2025"/>
    </div>

    <div class="field">
      <label for="description">Description:</label>
      <textarea name="description" rows="10" cols="70" wrap="soft" id="description"></textarea>
    </div>

    <div class="drop-down">
      <label for="select-artist">Artist:</label>
      <select name="artist_id" id="select-artist">
        <% @artists.each do |artist| %>
        <option value=<%= artist.id %>><%= artist.name %></option>
        <% end %>
      </select>
    </div>

    <div class="drop-down">
      <label for="select-category">Category:</label>
      <select name="category_id" id="select-category">
        <% @categories.each do |category| %>
        <option value=<%= category.id %>><%= category.name %></option>
        <% end %>
      </select>
    </div>

    <div class="field">
      <label for="image">Image URL:</label>
      <textarea name="image" rows="3" cols="70" wrap="soft" id="bio"></textarea>
    </div>

    <div class="button">
      <input type="submit" value="Add Exhibit"/>
    </div>

  </form>

