<h1>Edit artist</h1>

<form method="POST" action="/artists/<%= @artist.id %>">
  <div class="form-wrapper">

    <div class="field">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @artist.name %>"/>
    </div>

    <div class="field">
      <label for="born">Year born:</label>
      <input type="text" name="born" id="born" value="<%= @artist.born %>"/>
    </div>

    <div class="field">
      <label for="bio">Biography:</label>
      <input type="text" name="biography" id="bio"
      value="<%= @artist.biography %>"/>
    </div>

    <div class="field">
      <label for="image">Image URL:</label>
      <input type="text" name="image" id="image"
      value="<%= @artist.image %>"/>
    </div>

    <div class="button">
      <input type="submit" value="Confirm edit"/>
    </div>

  </div>
</form>
